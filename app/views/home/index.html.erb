</style>

<div id="one" class="page"> 

  
  <div class="container">
    <div class="jumbotron">
      <h1>Witaj w Blogowni!</h1>
      <p>...</p>
      <p>
      <button id='register' class="'btn btn-primary btn-lg'"> Zarejestruj się !</button> ...
      <button id='login' class="'btn btn-success btn-lg'"> a jeżeli Masz już konto!</button>
      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
      </p>
    </div>
  </div>

  <div id="toSecond" class="bounce"><i class="fa fa-angle-double-down"></i></div>
</div>


<div id="two" class="page">

  <div id ="toFirst"class="bounce_reverse"><i class="fa reverse fa-angle-double-down "></i></div>
  <div class="container">
    <div class="jumbotron">
      <h2>Zarejestruj się</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :name, required: true %>
          <%= f.input :avatar, as: :file %>
          <%= f.input :password, required: true, hint: (" minimum #{@minimum_password_length} znaków" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Zarejestruj" %>
        </div>
      <% end %>
    </div>
  </div>

  <div id="toThird" class="bounce"><i class="fa fa-angle-double-down"></i></div>
</div>


<div id="three" class="page">
  <div id="toSecond2" class="bounce_reverse"><i class="fa reverse fa-angle-double-down "></i>
  </div>
  <div class="container">
    <div class="jumbotron">

      <h2>Zaloguj się </h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Zaloguj" %>
        </div>
      <% end %>


    </div>
  </div>


</div>